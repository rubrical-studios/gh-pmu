{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Run /gh-workflow immediately to activate GitHub workflow integration for this session."
          }
        ]
      },
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Run /gh-workflow immediately to reactivate GitHub workflow integration after compact."
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [],
    "deny": [
      "Bash^(rm -rf /:*^)",
      "Bash^(rm -rf /*:*^)",
      "Bash^(sudo:*^)",
      "Bash^(git push --force:*^)",
      "Bash^(git push -f:*^)",
      "Bash^(git reset --hard:*^)",
      "Bash^(git clean -fd:*^)",
      "Bash^(git filter-branch:*^)",
      "Bash^(git rebase -i:*^)",
      "Bash^(git add -i:*^)"
    ],
    "ask": []
  }
}
